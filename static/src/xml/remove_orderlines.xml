<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="clear_pos_order_line.ControlButtons" t-inherit="point_of_sale.ControlButtons" t-inherit-mode="extension">
        <xpath expr="//button[contains(@class, 'more-btn')]" position="before">
             <button class="clear-pos-order-line control-button btn btn-light btn-lg"
                     t-on-click="() => this.onclickRemove()">
            <i class="fa fa-eraser"> </i>
                 <span> </span>
                 <span>Clear All</span>
        </button>
        </xpath>
    </t>
</templates>

